<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/adminBox"
            android:padding="4dp"
            android:text="admin"
            android:textSize="18sp"
            android:theme="@style/checkboxGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:padding="4dp"
            android:id="@+id/userBox"
            android:text="user"
            android:textSize="18sp"
            android:theme="@style/checkboxGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/manageSaveBtn"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Save"
            android:background="@drawable/details_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
                        android:indeterminateDrawable="@drawable/sabot_progress"
            android:id="@+id/manageSaveProgress"
            android:visibility="gone"
            android:progressDrawable="@drawable/progressbarcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>